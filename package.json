{
	"name": "techdinner-backend",
	"version": "1.0.0",
	"description": "Back-end da aplicação do TechDinner.",
	"main": "server.ts",
	"scripts": {
		"dev": "ts-node-dev --transpile-only --respawn --ignore-watch node_modules ./src/server.ts",
		"build": "rimraf ./build && yarn tsc",
		"start": "node ./build/server.js",
		"postinstall": "nvmrc-check --node $(cat .nvmrc)",
		"lint": "tsc --noEmit && eslint . --ext .ts,.js,.json",
		"lint-and-fix": "eslint . --ext .ts,.js,.json --fix",
		"prettier-format": "prettier --config .prettierrc '**/*.{json,js,ts}' --write",
		"tscheck": "tsc",
		"prepare": "husky install"
	},
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"jsonwebtoken": "^8.5.1",
		"mysql": "^2.14.1",
		"rimraf": "^3.0.2",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/mysql": "^2.15.21",
		"@types/node": "^16.11.10",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.35.1",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard-with-typescript": "^22.0.0",
		"eslint-import-resolver-typescript": "^3.5.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.1",
		"nvmrc-check": "^1.0.2",
		"prettier": "^2.7.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "*"
	},
	"private": true
}
